        <TextBox x:Name="txtEmail" TextWrapping="Wrap" FontFamily="Ubuntu" FontSize="20" Foreground="#FFABADB3" Margin="540,119,269,467"/>
        <Label Content="Calle" FontFamily="Ubuntu" FontSize="20" Margin="109,279,818,307"/>
